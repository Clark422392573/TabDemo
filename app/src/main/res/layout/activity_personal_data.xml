<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    tools:context=".personaldata.PersonalDataActivity">

    <com.example.clark.tabdemo.utils.OnScrollListener
        android:id="@+id/my_Scroll_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlayout_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/head_bk">

                <com.example.clark.tabdemo.utils.RoundImage
                    android:id="@+id/img_personal_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:src="@mipmap/icon_me" />


            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp" />

        </LinearLayout>

    </com.example.clark.tabdemo.utils.OnScrollListener>

    <LinearLayout
        android:id="@+id/llayout_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_personal_bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@mipmap/img_bk" />

    </LinearLayout>

    <com.example.clark.tabdemo.tablayout.SegmentTabLayout
        android:id="@+id/personal_tab"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        tl:tl_indicator_anim_enable="true"
        tl:tl_indicator_bounce_enable="true"
        tl:tl_indicator_color="@android:color/holo_blue_light"
        tl:tl_tab_padding="20dp"/>

</RelativeLayout>
